@model Lab2_ImageService.Models.ImageUploadModel

@{
    ViewData["Title"] = "Object Detection";
}

<h2>Object Detection</h2>

<form asp-action="DetectObjects" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="ImageFile">Choose an image file:</label>
        <input type="file" class="form-control-file" id="ImageFile" name="ImageFile">
    </div>
    <button type="submit" class="btn btn-primary">Detect Objects</button>
</form>

<form asp-action="DetectObjects" method="post">
    <div class="form-group">
        <label for="ImageUrl">Or enter an image URL:</label>
        <input type="url" class="form-control" id="ImageUrl" name="ImageUrl">
    </div>
    <button type="submit" class="btn btn-primary">Detect Objects from URL</button>
</form>

<div class="alert alert-danger mt-3">
    @ViewBag.ErrorMessage
</div>
